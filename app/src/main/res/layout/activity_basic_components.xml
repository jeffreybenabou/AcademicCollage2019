<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".style.BasicComponents"
    android:layoutDirection="ltr"
    >

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/attribute"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
                android:onClick="showMenu"
                android:text="התנהגויות בסיסיות" />

            <LinearLayout
                android:id="@+id/all_atribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="מהי התנהגות בעצם ?"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="מערכת אנדרואיד מספקת לנו את האפשרות לשנות מגוון אפשרויות של רכיבים החל מ-צבע,גודל,פעולה בעת לחיצה ועוד.\n כל מאפיין שכזה נקרא התנהגות." />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView5"
                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="match_parent"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="כאשר נבחר להשתמש בגודל זה אנחנו בעצם אומרים לאותו פקד להיות בגודל של מי שמכיל אותו -בגודל של האבא." />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView6"
                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="wrap_content"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="גודל אשר נקבע לפי התוכן שנמצא בתוך הפקד" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView7"
                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="match_constraint"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="כאשר אנחנו נספק לרכיב שלנו שטח כלשהוא מהמסך בעזרת קישור הרכיב אל מיקום כלשהוא אנחנו נשתמש בגודל זה כדי להגדיר לרכיב שלנו להימתח על כל הגבול שהגדרנו לו  " />
                </androidx.cardview.widget.CardView>

                <TextView

                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="width/height"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="קובע את גודל הרכיב שלנו, הגדלים בהם נשתמש הם לא גדלים קבועים לדוגמא :130dp אלה נשתמש באחד מהגדלים שלמדנו עליהם למעלה על מנת לשמור על עקרון הרספונסביות." />
                </androidx.cardview.widget.CardView>

                <TextView

                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="layout_margin"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="מגדיר לנו את המרחק של הרכיב שלנו מגבולות הגזרה שלו, ככל שהטווח יהיה גדול יותר ככה גם המרחק שלו מהגבולות יגדל" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <Button
                android:id="@+id/basic_component"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
                android:onClick="showMenu"
                android:text="פקדים בסיסיים" />

            <LinearLayout
                android:id="@+id/all_basic_component"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Text View"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="רכיב אשר נועד לספק לנו את האפשרות להציג למשתמש טקסט כלשהוא." />
                </androidx.cardview.widget.CardView>

                <TextView

                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Button"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="מייצג לנו כפתור בסיסי שאחד מההתנהגויות הנפוצות שלו הוא onClick אשר מחליט מה קורה בעת לחיצה על כפתור" />
                </androidx.cardview.widget.CardView>

                <TextView

                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Image Button"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="כמו כפתור רגיל בדיוק אך פה יש לנו את האפשרות גם להכניס תמונת רקע ובעצם להפוך את הרכיב אל תמונה לחיצה." />
                </androidx.cardview.widget.CardView>

                <TextView

                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Plain Text"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="רכיב שמאפשר לנו לקבל מידע כלשהוא מהמשתמש כלומר לקבל קלט מבחוץ." />
                </androidx.cardview.widget.CardView>

                <TextView

                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Image View"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="רכיב של תמונה אשר אחת מההתנהגויות הנפוצות שלו הוא scaleType אשר קובע איך התמונה תימתח בהתאם לגודל הרכיב." />
                </androidx.cardview.widget.CardView>

                <TextView

                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Scroll View"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="רכיב אשר מכיל רכיבים אחרים ונותן לנו את האפשרות לבצע גלילה באפליקציה-לרכיב זה יכול להיות שני אפשרויות ראשיות :כיוון הגלילה זאת אומרת יש לנו אפשרות לבחור בין גלילה אופקית לגלילה אנכית." />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <include
                layout="@layout/comment_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>