<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:layoutDirection="ltr"
    tools:context=".style.Layouts">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="פריסות Layouts"
                android:textColor="#ECBF89" />

            <TextView

                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginStart="8dp"

                android:layout_marginEnd="8dp"
                android:text=' אז מהי פריסה?\n\n פריסה היא "מיכל" בלתי נראה שיכול להכיל בתוכו מגוון רחב של אובייקטים, תפקיד הפריסה היא להגדיר את המבנה של ממשק המשתמש באפליקציה שלנו -כלומר לסדר את הרכיבים בצורה מסויימת, קיימות כל מיני סוגי פריסות שונים שכל פריסה מסדרת את הרכיבים שלה בצורה אחרת.'
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView11"
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"

                android:text="סוגי פריסות"
                android:textColor="#ECBF89" />

            <TextView
                android:id="@+id/textView18"
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginStart="8dp"

                android:layout_marginEnd="8dp"
                android:text="ConstraintLayout"
                android:textAlignment="center"
                android:textColor="#ECBF89"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginTop="8dp"
                    android:text="כפתור 1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginTop="8dp"
                    android:text="כפתור 7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="כפתור 3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="כפתור 8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="כפתור 4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button7"
                    app:layout_constraintStart_toEndOf="@+id/button6" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginTop="8dp"
                    android:text="כפתור 5"
                    app:layout_constraintEnd_toStartOf="@+id/button2"
                    app:layout_constraintStart_toEndOf="@+id/button"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginTop="8dp"
                    android:text="כפתור 6"
                    app:layout_constraintBottom_toTopOf="@+id/button7"
                    app:layout_constraintEnd_toStartOf="@+id/button2"
                    app:layout_constraintStart_toEndOf="@+id/button10"
                    app:layout_constraintTop_toBottomOf="@+id/button2" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginTop="8dp"
                    android:text="כפתור 2"
                    app:layout_constraintBottom_toTopOf="@+id/button9"
                    app:layout_constraintEnd_toStartOf="@+id/button10"
                    app:layout_constraintStart_toEndOf="@+id/button"
                    app:layout_constraintTop_toBottomOf="@+id/button10" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView

                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginTop="8dp"
                android:text="כמו שאנחנו רואים בדוגמא למעלה באמצעות ConstraintLayout אנחנו יכולים למקם את הרכיבים שלנו בצורה חופשית על גבי שטח מסויים מהמסך-כלומר אנחנו בוחרים היכן למקם את הרכיבים ולא הפריסה שלנו "
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView13"
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="LinearLayout (horizontal/vertical)"
                android:textAlignment="center"
                android:textColor="#ECBF89"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Button" />

                <Button
                    android:id="@+id/button16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Button" />

                <Button
                    android:id="@+id/button15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Button" />

                <Button
                    android:id="@+id/button19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Button" />

                <Button
                    android:id="@+id/button18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Button" />
            </LinearLayout>

            <TextView

                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginTop="8dp"
                android:text="מה שהפריסה הזו עושה היא בעצם לסדר לנו את הרכיבים שלנו בצורה אנכית או ורטיקלית מה שמקל עלינו מאוד במידה ויהיו לנו הרבה רכיבים שאנחנו רוצים שיהיו באותו גודל וגובה ומסודרים אחד אחרי השני"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView25"
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="GuideLine (Vertical/Horizontal)"
                android:textAlignment="center"
                android:textColor="#ECBF89"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginTop="8dp"
                android:text='קווים מנחים עוזרים לנו למקם רכיבים לפי אחוזי מסך וגם עוזרים לנו להגדיר תחום לרכיב כלשהוא ולהגדיר "גבולות" גזרה, על מנת לממש את עניין האחוזים אנחנו נשתמש במאפיין שקוראים לו layout_constraintGuide_percent שהערכים שהוא מקבל הוא 1(100 אחוז) ו-0(אפס אחוז)'
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>